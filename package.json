{
  "name": "aibsproject",
  "version": "1.0.0",
  "main": "main.js",
  "description": "AI Breast Surgeon Project Desktop App",
  "author": "Kei Ishii",
  "homepage": "./",
  "build": {
    "appId": "jp.kyoto-u.aibs",
    "productName": "AIBSApp",
    "files": [
      "build/**/*",
      "main.js",
      "public/**/*",
      "icon.ico",
      "package.json",
      "node_modules/**/*",
      "run_backend.exe",
      "!**/darwin/**"
    ],
    "extraResources": [
      {
        "from": "../dist/run_backend.exe",
        "to": "run_backend.exe"
      },
      {
        "from": "../.env",
        "to": ".env"
     }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "sign": false,
      "signingHashAlgorithms": [],
      "verifyUpdateCodeSignature": false,
      "signDlls": false
    },
    "mac": {
      "target": []
      },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": null,
    "asar": true,
    "directories": {
      "buildResources": "assets" 
    },
    "asarUnpack": [
      "run_backend.exe",
      ".env"
    ],
    "compression": "store",       
    "buildDependenciesFromSource": true, 
    "npmRebuild": false         
  },
  "scripts": {
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "build:backend": "pyinstaller --onefile ../run_backend.py",
    "build:all": "npm run build && npm run build:backend && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false USE_HARD_LINKS=false npm run dist",
    "electron-dev": "electron .",
    "dist": "electron-builder --win"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "axios": "^1.9.0"
  }
}
